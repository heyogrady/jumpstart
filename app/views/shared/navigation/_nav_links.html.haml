%ul.right.hide-on-med-and-down
  - if user_signed_in?
    = render("shared/navigation/user_is_signed_in")
  - else
    = nav_link 'Sign in', new_session_path(:user)

- if user_signed_in? && current_user.in_trial_without_card?
  = link_to("Upgrade (#{days_remaining_in_trial(current_user.subscription)} left)", new_credit_card_path, class: "btn btn-primary navbar-btn navbar-right")

%ul.side-nav#nav-mobile
  - if user_signed_in?
    = render("shared/navigation/user_is_signed_in")
  - else
    = nav_link 'Sign in', new_session_path(:user)
